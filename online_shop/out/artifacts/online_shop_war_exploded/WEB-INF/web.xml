<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>Head First</param-name>
        <param-value>5</param-value>
    </context-param>
    <context-param>
        <param-name>Mazda6 tutorial</param-name>
        <param-value>4</param-value>
    </context-param>
    <context-param>
        <param-name>The Lord of the Rings</param-name>
        <param-value>3.5</param-value>
    </context-param>
    <context-param>
        <param-name>Children Stories</param-name>
        <param-value>2</param-value>
    </context-param>

    <servlet>
        <servlet-name>goodsSelectionServlet</servlet-name>
        <servlet-class>app.servlets.GoodsSelectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>printCheckServlet</servlet-name>
        <servlet-class>app.servlets.PrintCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>goodsSelectionServlet</servlet-name>
        <url-pattern>/goodSelectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>printCheckServlet</servlet-name>
        <url-pattern>/printCheckServlet</url-pattern>
    </servlet-mapping>
</web-app>
